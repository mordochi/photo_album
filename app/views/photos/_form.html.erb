<div class="form container box">
  <%= form_for @photo do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <% if @photo.errors.present? %>
        <ul>
          <% @photo.errors.each do |error,message|%>
            <% if error == :title %>
              <li><%= "Title #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, class: "form-control" %>
      <% if @photo.errors.present? %>
        <ul>
          <% @photo.errors.each do |error,message|%>
            <% if error == :date %>
              <li><%= "Date #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
      <% if @photo.errors.present? %>
        <ul>
          <% @photo.errors.each do |error,message|%>
            <% if error == :description %>
              <li><%= "Description #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :file_location %>
      <%= f.file_field :file_location %>
      <% if @photo.errors.present? %>
        <ul>
          <% @photo.errors.each do |error,message|%>
            <% if error == :file_location %>
              <li><%= "File location #{message}" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
    <%= link_to 'Back', photos_path, class: "btn btn-default" %>
    <%= f.submit class: "btn btn-default btn-new" %>
  <% end %>
</div>